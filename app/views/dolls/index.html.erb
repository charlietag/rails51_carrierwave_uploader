<p id="notice"><%= notice %></p>

<h1>Dolls</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dolls.each do |doll| %>
      <tr>
        <td><%= doll.name %></td>
        <td><%= doll.avatar %></td>
        <td><%= link_to 'Show', doll %></td>
        <td><%= link_to 'Edit', edit_doll_path(doll) %></td>
        <td><%= link_to 'Destroy', doll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doll', new_doll_path %>
