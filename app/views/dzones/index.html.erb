<p id="notice"><%= notice %></p>

<h1>Dzones</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dzones.each do |dzone| %>
      <tr>
        <td><%= dzone.title %></td>
        <td>
          <%= image_tag dzone.picture, width: "10%", class: "img-thumbnail img-responsive" %>
        </td>
        <td><%= link_to 'Show', dzone %></td>
        <td><%= link_to 'Edit', edit_dzone_path(dzone) %></td>
        <td><%= link_to 'Destroy', dzone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

